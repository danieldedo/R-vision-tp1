{{ form_start(form) }}
    {# {{ form_widget(form) }} #}

        <fieldset class="border px-5 border-black">
            <legend class="float-none w-auto p-2" style="left: 100px;">Information du logement</legend>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom) }}
                    {{ form_errors(form.prenom) }}
                </div
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_label(form.ville) }}
                    {{ form_widget(form.ville) }}
                    {{ form_errors(form.ville) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.region) }}
                    {{ form_widget(form.region) }}
                    {{ form_errors(form.region) }}
                </div
            </div> 
            
            <div class="form-group row">
            <div class="col-sm-3 form-label">
                {{ form_label(form.sexe) }}
            </div>
            <div class=" d-flex justify-content-between col-sm-3 mt-4 ">
                {% for radio in form.sexe %}
                    <div class=" justify-content-between">
                        {{ form_widget(radio, {'attr': {'class': 'form-check-input', 'id' : 'membershipRadios1'}}) }}
                        {{ form_label(radio, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                {% endfor %}
            </div>
        </div>
    
            <div class="row m-2"> <!-- Vous pouvez personnaliser la classe CSS selon vos besoins -->
                <button type="reset" class="col-2 btn btn-secondary">Effacer</button>
                <button class="offset-4 col-2 btn btn-primary">{{ button_label|default('Enregister') }}</button>
            </div>
        </fieldset>

{{ form_end(form) }}
