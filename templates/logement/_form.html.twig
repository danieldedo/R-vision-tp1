{{ form_start(form) }}
    {# {{ form_widget(form) }} #}

        <fieldset class="border p-2">
            <legend class="float-none w-auto p-2" style="left: 100px;">Information du logement</legend>
            <div class="row">
                <div class="offset-sm-10 form-check form-switch">
                    {{ form_label(form.disponibilite) }}
                    {{ form_widget(form.disponibilite) }}
                    {{ form_errors(form.disponibilite) }}
                </div
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_label(form.code) }}
                    {{ form_widget(form.code) }}
                    {{ form_errors(form.code) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div
            </div>
    
            <div class="row">
                <div class="col-sm-6">
                    {{ form_label(form.capacite) }}
                    {{ form_widget(form.capacite) }}
                    {{ form_errors(form.capacite) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                </div
            </div> 
            
            <div class="row">
                <div class="col-sm-6">
                    {{ form_label(form.lieu) }}
                    {{ form_widget(form.lieu) }}
                    {{ form_errors(form.lieu) }}
                </div>
                <div class="col-sm-6 ">
                    {{ form_label(form.photo) }}
                    {{ form_widget(form.photo) }}
                    {{ form_errors(form.photo) }}
                </div
            </div> 
    
            <div class="row m-2"> <!-- Vous pouvez personnaliser la classe CSS selon vos besoins -->
                <button type="reset" class="col-2 btn btn-secondary">Effacer</button>
                <button class="offset-4 col-2 btn btn-primary">{{ button_label|default('Enregister') }}</button>
            </div>
        </fieldset>

{{ form_end(form) }}
